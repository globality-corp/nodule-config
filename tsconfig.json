{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "./lib",
    "lib": ["ES2022"],
    "declaration": true,
    "module": "NodeNext",
    "moduleDetection": "force",
    "target": "ES2022",
    "noImplicitAny": true,
    "removeComments": false,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo",
    "types": ["jest", "node"],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "$schema": "https://json.schemastore.org/tsconfig"
}
