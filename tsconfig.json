{
  "extends": "./node_modules/@total-typescript/tsconfig/tsc/no-dom/library.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",

    "strict": true,
    "checkJs": true,
    "incremental": true,

    "noImplicitAny": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,

    "tsBuildInfoFile": "lib/.tsbuildinfo",

    "types": ["jest", "node"]
  },
  "include": ["src"],
  "$schema": "https://json.schemastore.org/tsconfig"
}
